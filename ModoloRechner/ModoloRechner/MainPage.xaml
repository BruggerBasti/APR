<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ModoloRechner.MainPage">

    <ScrollView>
        <Grid RowDefinitions="Auto, *, *" ColumnDefinitions="Auto, *, *">

            <Label Text="Modolo-Rechner" />

            <Label Text="{Binding Rndm}" Grid.Row="1"/>

            <Label Text="% 2" Grid.Row="1" Grid.Column="1" HorizontalTextAlignment="End" />

            <Button Text="Neue Zahl" Command="{Binding NeueZahlCommand}" Grid.Row="2" Grid.Column="2"/>
        </Grid>
    </ScrollView>

</ContentPage>

