<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Zahlencheck.MainPage">

    <StackLayout>
        <Label Text="Gerade/Ungerade"/>
        <Label x:Name="lblAusgabe" Text="{Binding Ausgabe}"/>
        <Entry x:Name="txtEingabe" Text="{Binding Zahl}"/>
        <Button Text="Kontrollieren" Command="{Binding CheckCommand}"/>
    </StackLayout>
</ContentPage>

